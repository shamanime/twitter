.row
  .span16.columns
    = form_for :session, :url => sessions_path do |f|
      %fieldset
        %legend= @title
        .clearfix
          = f.label :email
          .input= f.text_field :email
        .clearfix
          = f.label :password
          .input= f.password_field :password
        .actions
          = f.submit "Sign in", :class => "btn primary"
          New user?
          = link_to "Sign up now!", signup_path