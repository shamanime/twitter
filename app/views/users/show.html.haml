.row
  .span12.columns
    %h1
      = gravatar_for @user
      = @user.name
    .row
      .span12.columns
        - if current_user.following?(@user)
          = render :partial => 'unfollow'
        - else
          = render :partial => 'follow' unless current_user == @user
    - unless @user.microposts.empty?
      = render @microposts
      = paginate @microposts
  .span4.columns
    .well
      %p
        %strong Name:
        = @user.name
      %p
        %strong URL:
        = link_to user_path(@user), @user
      %p
        %strong Microposts:
        = @user.microposts.count
      = render 'shared/stats'