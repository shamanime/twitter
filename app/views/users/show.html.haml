.row
  .span12.columns
    %h1
      = gravatar_for @user
      = @user.name
    - unless @user.microposts.empty?
      = render @microposts
      = paginate @microposts
  .span4.columns
    %p
      %strong Name:
      = @user.name
    %p
      %strong URL:
      = link_to user_path(@user), @user
    %p
      %strong Microposts:
      = @user.microposts.count