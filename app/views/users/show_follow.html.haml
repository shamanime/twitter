.row
  .span12
    %h1= @title
    - unless @users.empty?
      %ul.users= render @users
      = paginate @users
  .span4
    .well
      %p
        %strong Name:
        = @user.name
      %p
        %strong URL:
        = link_to user_path(@user), @user
      %p
        %strong Microposts:
        = @user.microposts.count
      = render 'shared/stats'
      - unless @users.empty?
        - @users.each do |user|
          = link_to gravatar_for(user, :size => 30), user